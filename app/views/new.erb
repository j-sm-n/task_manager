<form action="/tasks" method="post">
  <div class="form-group">
    <label for="titleInput">Task Title</label>
    <input type="text" class="form-control" name='task[title]' id="titleInput" placeholder="Title">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea class='form-control' rows='3' name='task[description]' placeholder="Enter your description here"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
